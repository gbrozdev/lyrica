<style>
    .lyrica {
        padding: 25px;
        width: 100%;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-content: center;
    }
    .lyrica input {
        margin-left: 25px;
        width: 100vh;
    }
</style>
    <title>Lyrica</title>


<div class="row container d-flex lyrica">
    <h1 style="margin-bottom: 60px;">Lyrica</h1>
    <a  href="/add-lyrics" style="margin: 10px;"><h3 style="margin-bottom: 50px;">+</h3></a>
    <form action="/search" method="post">
    <input class="form-control" name="search" type="search" placeholder="Search" aria-label="Search">
    </form>
    {{#if err}}
    <script type="text/javascript" async src="https://tenor.com/embed.js"></script>
    <h1>No Songs Found search again</h1>
    {{!-- <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRQutY6ljYWb4HSboQUruqOuB9IA1aMzUvq6w&usqp=CAU" alt="search again"> --}}
    <div class="tenor-gif-embed" data-postid="10800494" data-share-method="host" data-aspect-ratio="1" data-width="30%"><a href="https://tenor.com/view/crying-emoji-sad-gif-10800494">Crying Emoji GIF</a>from <a href="https://tenor.com/search/crying-gifs">Crying GIFs</a></div> 
    {{/if}}
</div>



{{#each lyrics}}

<div class="container">
    <div class="row">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{this.song}}</h5>
                <h6 class="card-subtitle mb-2 text-muted"> {{this.name}} </h6>
                <p class="card-text">{{this.description}}</p>
                <a href="/lyrica/{{this._id}}" class="card-link">here with lyrics</a>
            </div>
        </div>
    </div>
</div>

{{/each}}

